WindowManager:
  MainWindow:
  EncWindow:
  DecWindow:
  TripleDESWindow:
  ConvertWindow:



<MainWindow>:
  name: "main"

  FloatLayout:
    Image:
      source: "project.jpg"
      allow_stretch: True

    Label:
      font_size: 60
      color: 0.9,0.9,0.9,1
      size_hint: 0.6, 0.2
      text: "Welcome to"
      pos_hint: {"x": 0.2, "top": 0.9}

    Label:
      font_size: 60
      color: 0.9,0.9,0.9,1
      size_hint: 0.6, 0.2
      text: "the DES Encryptor/Decryptor"
      pos_hint: {"x": 0.2, "top": 0.8}


    Button:
      font_size: 40
      background_color: 0,0,0,1
      color: 1, 1, 0.99, 1
      size_hint: 0.04, 0.05
      text: "i"
      pos_hint: {"x":0.94, "top":0.88}
      on_release:
        root.info()

    Button:
      font_size: 50
      background_color: 0.2, 0.7, 1, 0.7
      color: 1,1,0.99,1
      size_hint: 0.35, 0.2
      text: "Encryption"
      pos_hint: {"x":0.1, "top":0.55}
      on_release:
        app.root.current = "encrypt"
        root.manager.transition.direction = "right"

    Button:
      font_size: 50
      background_color: 0.2,0.7,1,0.7
      color: 1,1,0.99,1
      size_hint: 0.35, 0.2
      text: "Decryption"
      pos_hint: {"x":0.55, "top":0.55}
      on_release:
        app.root.current = "decrypt"
        root.manager.transition.direction = "left"

    Button:
      font_size: 50
      background_color: 0.2, 0.7, 1, 0.7
      color: 1,1,0.99,1
      size_hint: 0.35, 0.2
      text: "Triple DES"
      pos_hint: {"x":0.1, "top":0.3}
      on_release:
        app.root.current = "Triple"
        root.manager.transition.direction = "up"

    Button:
      font_size: 50
      background_color: 0.2,0.7,1,0.7
      color: 1,1,0.99,1
      size_hint: 0.35, 0.2
      text: "Convert"
      pos_hint: {"x":0.55, "top":0.3}
      on_release:
        app.root.current = "convert"
        root.manager.transition.direction = "down"



